#
# Make any modifications to Makefile.in *NOT* Makefile, as it will be
# overwritten by configure.
#

SHELL = /bin/sh

top_srcdir = @top_srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@

bindir = @bindir@
sharedir = @datadir@/licq/
mandir = @mandir@/man1

pkgdatadir = $(datadir)/@PACKAGE@

INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@
MKINSTALLDIRS = $(top_srcdir)/mkinstalldirs

.PHONY: all clean distclean install

all:

clean:
	$(RM) *~

distclean: clean
	$(RM) Makefile

install:
	$(MKINSTALLDIRS) $(sharedir)
	$(MKINSTALLDIRS) $(sharedir)/qt-gui/locale
	for j in qt-gui/skin.*; do \
	  $(MKINSTALLDIRS) $(sharedir)/$$j; \
	  for i in $$j/*; do \
	    $(INSTALL_DATA) $$i $(sharedir)/$$j; \
	  done; \
	done
	for j in qt-gui/icons.*; do \
	  $(MKINSTALLDIRS) $(sharedir)/$$j; \
	  for i in $$j/*; do \
	    $(INSTALL_DATA) $$i $(sharedir)/$$j; \
	  done; \
	done

