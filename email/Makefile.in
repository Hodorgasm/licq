SUBDIRS = src

.PHONY: all_recursive install_recursive clean_recursive distclean_recursive \
	all clean distclean install

all_recursive install_recursive clean_recursive distclean_recursive:
	@for subdir in $(SUBDIRS); do \
	  target=`echo $@ | sed s/_recursive//`; \
	  echo "Making $$target in $$subdir"; \
	  (cd $$subdir && $(MAKE) $$target); \
	done

all: all_recursive

clean: clean_recursive

distclean: distclean_recursive
	$(RM) config.cache config.log config.status Makefile config.h \
		confdefs.h *~

install: install_recursive

cvs-clean:
	@if test ! -d CVS; then \
          echo "you don't have a toplevel CVS directory."; \
          echo "You most certainly didn't use cvs to get these sources."; \
          echo "But this function depends on cvs's informations."; \
          exit 1 ;\
        fi;\
        pwd=`pwd` ;\
        dirs=`find . -type d | grep -v CVS | sed -e "s#^./##"` ;\
        for i in $$dirs; do \
          if test ! -d $$pwd/$$i/CVS; then \
            echo "D $$i" ;\
            rm -rf $$pwd/$$i; \
            continue; \
          fi ;\
          cd $$pwd/$$i ;\
          for f in * .*; do \
            if test ! -d $$f; then \
              if grep "^/$$f/" CVS/Entries >/dev/null; then \
                a="b"; \
              else \
                echo "F $$i/$$f"; \
                rm -f $$pwd/$$i/$$f; \
              fi; \
            fi ; \
          done; \
        done                                   
